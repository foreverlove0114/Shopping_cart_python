pipeline {
    agent any

    parameters {
        choice(
            name: 'BASE_URL',
            choices: ['http://localhost:5000/', 'http://staging.example.com/', 'http://prod.example.com/'],
            description: 'Target environment for Python tests'
        )
        string(
            name: 'PYTEST_TIMEOUT',
            defaultValue: '30',
            description: 'Pytest timeout in seconds'
        )
        booleanParam(
            name: 'RUN_E2E_TESTS',
            defaultValue: true,
            description: 'Run end-to-end Selenium tests'
        )
    }

    tools {
        python 'Python39'  // 需要在Jenkins中配置
    }

    environment {
        BASE_URL = "${params.BASE_URL}"
        PYTEST_TIMEOUT = "${params.PYTEST_TIMEOUT}"
        RUN_E2E_TESTS = "${params.RUN_E2E_TESTS}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/foreverlove0114/Shopping_cart_python.git'
                script {
                    echo "✅ 代码检出完成"
                    echo "📁 工作目录: ${env.WORKSPACE}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo "🐍 安装Python依赖..."
                    bat "pip install -r requirements.txt pytest pytest-html requests beautifulsoup4 selenium"

                    // 检查安装结果
                    bat "python --version"
                    bat "pytest --version"
                }
            }
        }

        stage('Run API Tests') {
            steps {
                script {
                    echo "🔌 开始API测试..."
                    echo "🎯 测试环境: ${BASE_URL}"

                    bat """
                        python -m pytest test_routes/ -v \
                        --html=api_test_report.html \
                        --self-contained-html \
                        --timeout=${PYTEST_TIMEOUT} \
                        -o log_cli=true
                    """
                }
            }
            post {
                always {
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: '.',
                        reportFiles: 'api_test_report.html',
                        reportName: 'Python API Test Report'
                    ])
                }
            }
        }

        stage('Run E2E Tests') {
            when {
                expression { return env.RUN_E2E_TESTS == 'true' }
            }
            steps {
                script {
                    echo "🎨 开始E2E测试..."
                    echo "🎯 测试环境: ${BASE_URL}"

                    // 设置环境变量供E2E测试使用
                    bat """
                        set BASE_URL=${BASE_URL}
                        python -m pytest Pages/end_to_end.py -v \
                        --html=e2e_test_report.html \
                        --self-contained-html \
                        --timeout=60 \
                        -o log_cli=true
                    """
                }
            }
            post {
                always {
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: '.',
                        reportFiles: 'e2e_test_report.html',
                        reportName: 'Python E2E Test Report'
                    ])
                }
            }
        }

        stage('Test Summary') {
            steps {
                script {
                    echo "📊 测试执行完成"
                    echo "🌐 测试环境: ${BASE_URL}"
                    echo "⏱️  API超时: ${PYTEST_TIMEOUT}秒"
                    echo "🎨  E2E测试: ${RUN_E2E_TESTS}"
                    echo "📁 工作空间: ${env.WORKSPACE}"
                }
            }
        }
    }

    post {
        always {
            script {
                echo "🏁 Python测试流水线执行完成"
                // 清理临时文件
                bat "del /q *.log || echo No log files to delete"
            }
        }
        success {
            script {
                echo "🎉 所有Python测试通过！"
                // 可以在这里添加通知，比如邮件、Slack等
            }
        }
        failure {
            script {
                echo "❌ 部分测试失败，请检查报告"
                // 失败通知
            }
        }
        unstable {
            script {
                echo "⚠️ 测试结果不稳定，可能有闪烁测试"
            }
        }
    }
}